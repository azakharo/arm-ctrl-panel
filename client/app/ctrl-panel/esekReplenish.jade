#esek-replenish-page-content.p1
  // Page Title
  #esek-replenish-header
    span.text-xlarge Статистика пополнений баланса с помощью ЕСЭК&nbsp;
    span.text-large за&nbsp;
    // Time period selector
    strong#esek-replenish-time-period.text-large.mr1 {{ datePicker.date | DatePickerFilter}}
    button.btn.btn-default.responsive-btn(date-range-picker, ng-model="datePicker.date",
    options="dateRangePickerOpts", max="today",
    ng-disabled='isGettingData',
    uib-tooltip="Выбрать дату или период", tooltip-append-to-body="true", tooltip-placement="auto bottom")
      i.glyphicon.glyphicon-calendar
  // Statistic Results:
  #esek-replenish-stat-total
    #esek-replenish-stat-total-title.page-subtitle.pt1 Итоговая статистика
    #esek-replenish-stat-total-table(ng-show="data && !isObjectEmpty(data) && !isObjectEmpty(data.total)")
      table.tbl-seawater(st-table='getObjectPropNames(data.total)')
        thead
          tr
            th Способ оплаты
            th Кол-во
        tbody
          tr(ng-repeat='propName in getObjectPropNames(data.total)')
            td {{propName}}
            td {{data.total[propName]}}
  #esek-replenish-stat-detail
    .page-subtitle.pt1 Статистика по терминалам
    p Details
  // NO DATA message
  #esek-replenish-nodata.nodata-msg(ng-show="(!data || isObjectEmpty(data) || isObjectEmpty(data.total)) && !isGettingData") НЕТ ДАННЫХ
